@model MvcCreditApp.Models.Bid

@{
    ViewData["Title"] = "Редактирование";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>

<h4>Заявка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BidId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditHead" class="control-label">Тип кредита</label>
                <input asp-for="CreditHead" class="form-control" />
                <span asp-validation-for="CreditHead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bidDate" class="control-label">Дата создания</label>
                <input asp-for="bidDate" class="form-control" />
                <span asp-validation-for="bidDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться в список</a>
</div>

